{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "jekyll-serve",
      "command": "bundle exec jekyll serve",
      "type": "shell",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Configuration file*",
          "endsPattern": "Server running..."
        }
      }
    },
    {
      "label": "end serve",
      "type": "process",
      "command": [
        "${command:workbench.action.tasks.terminate}",
        "${command:workbench.action.acceptSelectedQuickOpenItem}"
      ],
    }
  ]
}